  z-index: 0;
}

@keyframes glow-rotate {
  0% {
    transform: translate(-50%, -50%) rotate(0deg) scale(1);
  }
  50% {
    transform: translate(-50%, -50%) rotate(180deg) scale(1.1);
  }
  100% {
    transform: translate(-50%, -50%) rotate(360deg) scale(1);
  }
}

/* 已点亮的地标 */
.landmark-node.lit .landmark-emoji {
  animation: lit-bounce 0.6s ease-out;
  filter: drop-shadow(0 0 18rpx rgba(255, 215, 0, 0.9));
}

@keyframes lit-bounce {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.3);
  }
}

.landmark-node.lit .landmark-pulse {
  background-color: rgba(255, 215, 0, 0.5);
}

/* 箭头连接器 - S形道路 */
