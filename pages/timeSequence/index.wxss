  align-items: center;
  justify-content: center;
  position: relative;
  width: 48rpx;
  height: 48rpx;
  cursor: pointer;
  animation: landmark-wave 3s ease-in-out infinite;
  transition: transform 0.3s ease, filter 0.3s ease;
}

/* 地标悬停效果 */
.landmark-node:active {
  transform: translateY(0) scale(1.15);
  filter: brightness(1.2);
}

/* 波动动画 - 错开时间营造波浪效果 */
@keyframes landmark-wave {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  50% {
    transform: translateY(-12rpx) scale(1.05);
  }
}

/* 不同地标的波动延迟 */
.landmark-wave-0 {
  animation-delay: 0s;
}

.landmark-wave-1 {
  animation-delay: 0.3s;
}

.landmark-wave-2 {
  animation-delay: 0.6s;
}

/* 地标emoji - 更小 + 摇摆 */
