  font-size: 32rpx;
  position: relative;
  z-index: 2;
  filter: drop-shadow(0 3rpx 6rpx rgba(0, 0, 0, 0.15));
  transition: all 0.3s ease;
  animation: emoji-swing 4s ease-in-out infinite;
}

/* emoji摇摆动画 */
@keyframes emoji-swing {
  0%, 100% {
    transform: rotate(0deg);
  }
  25% {
    transform: rotate(-5deg);
  }
  75% {
    transform: rotate(5deg);
  }
}

.landmark-node:active .landmark-emoji {
  transform: scale(0.9) rotate(0deg);
}

/* 地标名称 - 隐藏 */
.landmark-name {
  display: none;
}

/* 脉冲动画 - 更小，略微偏下 */
.landmark-pulse {
  position: absolute;
  top: 55%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 38rpx;
  height: 38rpx;
  border-radius: 50%;
  background-color: rgba(255, 200, 100, 0.3);
  animation: landmark-pulse 2s ease-out infinite;
  z-index: 0;
}

@keyframes landmark-pulse {
  0% {
    transform: translate(-50%, -50%) scale(0.8);
    opacity: 1;
  }
  100% {
    transform: translate(-50%, -50%) scale(1.5);
    opacity: 0;
  }
}

/* 已点亮的地标光效 - 更小，略微偏下 */
.landmark-glow {
  position: absolute;
  top: 55%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(255, 215, 0, 0.8) 0%, rgba(255, 165, 0, 0.4) 50%, transparent 100%);
