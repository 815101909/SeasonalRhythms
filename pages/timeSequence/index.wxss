  content: "";
  position: absolute;
  top: 6rpx;
  left: 6rpx;
  right: 6rpx;
  bottom: 6rpx;
  border: 1rpx dashed #ffe082;
  border-radius: 20rpx;
  z-index: 1;
  pointer-events: none;
}

/* 时节密码标题 */
.section-climate::before {
  content: "时节密码";
  position: absolute;
  top: -15rpx;
  left: 30rpx;
  background-color: #ffcc80;
  color: #ffffff;
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  z-index: 3;
  letter-spacing: 2rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 6rpx rgba(255, 193, 7, 0.15);
  font-family: "Source Han Sans", "Noto Sans SC", "思源黑体", sans-serif;
  padding-left: 40rpx;
  background-image: radial-gradient(circle, #fff59d 0 55%, transparent 56%), radial-gradient(circle, transparent 60%, #ffb74d 62% 72%, transparent 73%);
  background-repeat: no-repeat;
  background-position: 16rpx center, 16rpx center;
  background-size: 16rpx 16rpx, 22rpx 22rpx;
}

/* 添加左下角装饰 */
.section-climate .info-content::after {
  content: "";
  position: absolute;
  bottom: 10rpx;
  left: 10rpx;
  width: 30rpx;
  height: 30rpx;
  border-bottom: 2rpx solid #ffe082;
  border-left: 2rpx solid #ffe082;
  border-bottom-left-radius: 8rpx;
  z-index: 0;
}

/* 第三个文本框 - 文化气息 */
.section-culture {
  background-color: #fdf4f7;
  border: 4rpx solid #f48fb1;
  border-radius: 16rpx;
  padding: 50rpx 30rpx 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(244, 143, 177, 0.08);
  position: relative;
  margin-top: 40rpx;
}

.section-culture::before {
  content: "";
  position: absolute;
  top: 6rpx;
  left: 6rpx;
  right: 6rpx;
  bottom: 6rpx;
  border: 1rpx dashed #f8c9d8;
  border-radius: 12rpx;
  z-index: 1;
  pointer-events: none;
}

/* 文化气息标题 */
.section-culture::after {
  content: "文化气息";
  position: absolute;
  top: -15rpx;
  left: 30rpx;
  background-color: #f48fb1;
  color: white;
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  z-index: 3;
  letter-spacing: 2rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 6rpx rgba(244, 143, 177, 0.2);
  font-family: "Source Han Sans", "Noto Sans SC", "思源黑体", sans-serif;
  padding-left: 40rpx;
  background-image: linear-gradient(#ffffff, #ffffff), linear-gradient(#ffffff, #ffffff), linear-gradient(#ad1457, #ad1457);
  background-repeat: no-repeat;
  background-position: 14rpx center, 26rpx center, 20rpx center;
  background-size: 12rpx 16rpx, 12rpx 16rpx, 2rpx 16rpx;
}

/* 第四个文本框 - 时光机器 */
.section-structure {
  background-color: #fff1f0; /* 改为淡红色背景 */
